---
import LayoutNico from '../layouts/LayoutNico.astro';
---

<LayoutNico title="Nico CSS Showcase - NioTech" description="Complete showcase of all Nico CSS components, utilities, and features.">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="text-center">
        <h1>Complete <span>Showcase</span></h1>
        <p class="mb-4">Explore all the components, utilities, and features of our refactored CSS framework</p>
        <div class="d-flex justify-content-center" style="gap: 15px;">
          <span class="badge">97% Smaller</span>
          <span class="badge badge-secondary">Modern CSS</span>
          <span class="badge badge-outline">Responsive</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Buttons Showcase -->
  <section class="section">
    <div class="container">
      <div class="section-title">
        <h2>Button Components</h2>
        <p>Various button styles and states</p>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="d-flex flex-wrap" style="gap: 15px; margin-bottom: 30px;">
            <button class="btn btn-primary">Primary Button</button>
            <button class="btn btn-secondary">Secondary Button</button>
            <button class="btn btn-outline">Outline Button</button>
          </div>
          <div class="d-flex flex-wrap" style="gap: 15px;">
            <button class="btn btn-primary" disabled>Disabled Primary</button>
            <button class="btn btn-secondary" disabled>Disabled Secondary</button>
            <button class="btn btn-outline" disabled>Disabled Outline</button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Alerts Showcase -->
  <section class="section" style="background-color: var(--theme3);">
    <div class="container">
      <div class="section-title">
        <h2>Alert Components</h2>
        <p>Different types of alert messages</p>
      </div>
      <div class="row">
        <div class="col">
          <div class="alert alert-success">
            <strong>Success!</strong> Your action was completed successfully.
          </div>
          <div class="alert alert-warning">
            <strong>Warning!</strong> Please check your input before proceeding.
          </div>
        </div>
        <div class="col">
          <div class="alert alert-error">
            <strong>Error!</strong> Something went wrong. Please try again.
          </div>
          <div class="alert alert-info">
            <strong>Info!</strong> Here's some useful information for you.
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Progress Bars -->
  <section class="section">
    <div class="container">
      <div class="section-title">
        <h2>Progress Components</h2>
        <p>Progress bars and loading indicators</p>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="mb-3">Project Progress</h5>
          <div class="progress mb-3">
            <div class="progress-bar" style="width: 75%;"></div>
          </div>
          <p class="text-center">75% Complete</p>
          
          <h5 class="mb-3 mt-4">Skills Progress</h5>
          <div class="progress mb-2">
            <div class="progress-bar" style="width: 90%;"></div>
          </div>
          <p class="text-center">CSS: 90%</p>
          
          <div class="progress mb-2">
            <div class="progress-bar" style="width: 85%;"></div>
          </div>
          <p class="text-center">JavaScript: 85%</p>
          
          <div class="progress mb-2">
            <div class="progress-bar" style="width: 95%;"></div>
          </div>
          <p class="text-center">HTML: 95%</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Tabs Component -->
  <section class="section" style="background-color: var(--theme3);">
    <div class="container">
      <div class="section-title">
        <h2>Tab Component</h2>
        <p>Interactive tabbed content</p>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="tab-nav">
            <button class="tab-button active">Overview</button>
            <button class="tab-button">Features</button>
            <button class="tab-button">Pricing</button>
            <button class="tab-button">Support</button>
          </div>
          <div class="tab-content active">
            <h5>Overview</h5>
            <p>This is the overview tab content. Here you can see how the tab component works with smooth transitions and clean styling.</p>
          </div>
          <div class="tab-content">
            <h5>Features</h5>
            <p>This is the features tab content. The refactored CSS includes many powerful features for modern web development.</p>
          </div>
          <div class="tab-content">
            <h5>Pricing</h5>
            <p>This is the pricing tab content. Our CSS framework is available with flexible pricing options to suit your needs.</p>
          </div>
          <div class="tab-content">
            <h5>Support</h5>
            <p>This is the support tab content. We provide comprehensive documentation and support for all our components.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Grid System -->
  <section class="section">
    <div class="container">
      <div class="section-title">
        <h2>Grid System</h2>
        <p>Responsive grid layout examples</p>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="mb-3">Equal Columns</h5>
          <div class="row mb-4">
            <div class="col">
              <div class="p-3 text-center" style="background-color: var(--theme3); border-radius: 5px;">Column 1</div>
            </div>
            <div class="col">
              <div class="p-3 text-center" style="background-color: var(--theme3); border-radius: 5px;">Column 2</div>
            </div>
            <div class="col">
              <div class="p-3 text-center" style="background-color: var(--theme3); border-radius: 5px;">Column 3</div>
            </div>
          </div>
          
          <h5 class="mb-3">Mixed Columns</h5>
          <div class="row mb-4">
            <div class="col" style="flex: 2;">
              <div class="p-3 text-center" style="background-color: var(--theme); color: white; border-radius: 5px;">Wide Column</div>
            </div>
            <div class="col">
              <div class="p-3 text-center" style="background-color: var(--theme2); color: white; border-radius: 5px;">Narrow</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Typography Showcase -->
  <section class="section" style="background-color: var(--theme3);">
    <div class="container">
      <div class="section-title">
        <h2>Typography</h2>
        <p>Text styles and hierarchy</p>
      </div>
      <div class="card">
        <div class="card-body">
          <h1>Heading 1 - Main Title</h1>
          <h2>Heading 2 - Section Title</h2>
          <h3>Heading 3 - Subsection</h3>
          <h4>Heading 4 - Component Title</h4>
          <h5>Heading 5 - Small Title</h5>
          <h6>Heading 6 - Label</h6>
          
          <hr style="margin: 30px 0; border: 1px solid var(--border);">
          
          <p>This is a regular paragraph with <strong>bold text</strong> and <em>italic text</em>. The typography system provides consistent spacing and readability across all text elements.</p>
          
          <p>You can also use <a href="#">links</a> that follow the theme colors and provide smooth hover transitions for better user experience.</p>
          
          <blockquote style="border-left: 4px solid var(--theme); padding-left: 20px; margin: 20px 0; font-style: italic; color: var(--text);">
            "The refactored CSS framework provides a solid foundation for building modern, responsive web applications with ease."
          </blockquote>
        </div>
      </div>
    </div>
  </section>

  <!-- Utility Classes -->
  <section class="section">
    <div class="container">
      <div class="section-title">
        <h2>Utility Classes</h2>
        <p>Common utility classes for quick styling</p>
      </div>
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h5>Spacing Utilities</h5>
            </div>
            <div class="card-body">
              <div class="p-2 mb-2" style="background-color: var(--theme3);">Padding 2</div>
              <div class="p-3 mb-2" style="background-color: var(--theme3);">Padding 3</div>
              <div class="p-4 mb-2" style="background-color: var(--theme3);">Padding 4</div>
              <div class="mt-3 p-2" style="background-color: var(--theme3);">Margin Top 3</div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h5>Text Utilities</h5>
            </div>
            <div class="card-body">
              <p class="text-center">Centered text</p>
              <p class="text-left">Left aligned text</p>
              <p class="text-right">Right aligned text</p>
              <p class="mb-0">No margin bottom</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h5>Display Utilities</h5>
            </div>
            <div class="card-body">
              <div class="d-block mb-2 p-2" style="background-color: var(--theme3);">Block display</div>
              <div class="d-inline-block mb-2 p-2" style="background-color: var(--theme3);">Inline block</div>
              <div class="d-flex justify-content-between p-2" style="background-color: var(--theme3);">
                <span>Flex item 1</span>
                <span>Flex item 2</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Animation Showcase -->
  <section class="section" style="background-color: var(--theme3);">
    <div class="container">
      <div class="section-title">
        <h2>Animations</h2>
        <p>Smooth animations and transitions</p>
      </div>
      <div class="row">
        <div class="col">
          <div class="card animate-fadeInUp">
            <div class="card-body text-center">
              <h5>Fade In Up</h5>
              <p>This card animates from bottom to top with a fade effect.</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card animate-fadeInLeft">
            <div class="card-body text-center">
              <h5>Fade In Left</h5>
              <p>This card animates from left to right with a fade effect.</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card animate-fadeInRight">
            <div class="card-body text-center">
              <h5>Fade In Right</h5>
              <p>This card animates from right to left with a fade effect.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section" style="background: linear-gradient(135deg, var(--theme) 0%, var(--header) 100%); color: white;">
    <div class="container">
      <div class="text-center">
        <h2 style="color: white; margin-bottom: 20px;">Ready to Use Nico CSS?</h2>
        <p style="color: rgba(255,255,255,0.9); margin-bottom: 40px; font-size: 1.2rem;">Start building beautiful, responsive websites with our refactored CSS framework today.</p>
        <div class="d-flex justify-content-center" style="gap: 20px;">
          <button class="btn" style="background-color: white; color: var(--theme);">Get Started</button>
          <button class="btn btn-outline" style="border-color: white; color: white;">View on GitHub</button>
        </div>
      </div>
    </div>
  </section>
</LayoutNico>

<style>
  /* Custom styles for this showcase page */
  .w-100 {
    width: 100%;
  }
  
  .row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
  }
  
  .col {
    flex: 1;
    padding: 0 15px;
    min-width: 300px;
  }
  
  .flex-wrap {
    flex-wrap: wrap;
  }
  
  .justify-content-between {
    justify-content: space-between;
  }
  
  .justify-content-center {
    justify-content: center;
  }
  
  .text-center {
    text-align: center;
  }
  
  .text-left {
    text-align: left;
  }
  
  .text-right {
    text-align: right;
  }
  
  .d-block {
    display: block;
  }
  
  .d-inline-block {
    display: inline-block;
  }
  
  .d-flex {
    display: flex;
  }
  
  .p-2 { padding: 0.5rem; }
  .p-3 { padding: 1rem; }
  .p-4 { padding: 1.5rem; }
  
  .mb-0 { margin-bottom: 0; }
  .mb-2 { margin-bottom: 0.5rem; }
  .mb-3 { margin-bottom: 1rem; }
  .mb-4 { margin-bottom: 1.5rem; }
  
  .mt-3 { margin-top: 1rem; }
  
  @media (max-width: 768px) {
    .row {
      flex-direction: column;
    }
    
    .col {
      margin-bottom: 30px;
    }
  }
</style>
