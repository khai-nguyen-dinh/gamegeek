<style>
  /* Use Inter font for entire page */
  body {
    font-family: 'Inter', sans-serif !important;
  }

  /* Ensure RemixIcon uses correct font - must be after body rule */
  [class^="ri-"], [class*=" ri-"], i[class^="ri-"], i[class*=" ri-"] {
    font-family: 'remixicon' !important;
    font-style: normal !important;
  }

  /* Limit game controller icon size and change color to orange */
  img[src*="game-controller-svgrepo-com.svg"] {
    height: 12px !important;
    width: auto !important;
    max-width: none !important;
    object-fit: contain;
    vertical-align: middle;
    display: inline-block;
    /* Convert to orange color #FF5E14 */
    filter: brightness(0) saturate(100%) invert(48%) sepia(100%) saturate(2000%) hue-rotate(0deg) brightness(1.05) contrast(1.1);
  }

  /* Compact menu when scrolled */
  #navbar.navbar-compact {
    padding: 12px 0;
  }

  #navbar.navbar-compact .navbar-brand,
  #navbar.navbar-compact .other-options {
    display: none !important;
  }

  #navbar.navbar-compact .menu-area {
    flex: 1 !important;
    display: flex !important;
    justify-content: center !important;
  }

  #navbar.navbar-compact .menu-section {
    display: flex !important;
    align-items: center !important;
    gap: 2px !important;
    background: #4a4a4a !important;
    border-radius: 50px !important;
    padding: 6px 18px !important;
    margin: 0 auto !important;
    list-style: none !important;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.2) !important;
    flex-direction: row !important;
    flex-wrap: nowrap !important;
    height: auto !important;
  }

  #navbar.navbar-compact .menu-section li {
    margin: 0 !important;
    padding: 0 !important;
    list-style: none !important;
  }

  #navbar.navbar-compact .menu-section li a {
    color: #ffffff !important;
    font-weight: 600 !important;
    font-size: 14px !important;
    padding: 8px 18px !important;
    display: block !important;
    text-decoration: none !important;
    transition: all 0.3s ease !important;
    border-radius: 25px !important;
    white-space: nowrap !important;
    background: transparent !important;
    line-height: 1.5 !important;
    letter-spacing: 0.3px !important;
  }

  #navbar.navbar-compact .menu-section li a:hover {
    background: rgba(255, 255, 255, 0.15) !important;
    color: #ffffff !important;
  }

  /* Responsive adjustments */
  @media (max-width: 991px) {
    #navbar.navbar-compact {
      padding: 10px 0;
    }

    #navbar.navbar-compact .menu-section {
      padding: 5px 14px !important;
      gap: 1px !important;
    }

    #navbar.navbar-compact .menu-section li a {
      padding: 7px 14px !important;
      font-size: 13px !important;
    }
  }

  @media (max-width: 767px) {
    #navbar.navbar-compact {
      padding: 8px 0;
    }

    #navbar.navbar-compact .menu-section {
      padding: 4px 12px !important;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1px !important;
      border-radius: 30px !important;
    }

    #navbar.navbar-compact .menu-section li a {
      padding: 6px 12px !important;
      font-size: 12px !important;
    }
  }

  /* Sidebar search icon */
  .search-widget form button i {
    font-size: 18px;
    color: var(--paraColor);
  }

  /* Category widget arrow icons */
  .category-widget ul li a i {
    left: 0;
    top: 2px;
    font-size: 16px;
    color: var(--paraColor);
  }

  .category-widget ul li a {
    padding-left: 28px;
  }

  /* Pagination icons */
  .page-nav .page-link i {
    font-size: 18px;
    color: var(--paraColor);
  }

  .page-nav .page-link:hover i {
    color: var(--primaryColor);
  }

  /* Force all blog images to have same dimensions */
  .blog-card .blog-img {
    height: 280px;
    overflow: hidden;
  }

  .blog-card .blog-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Recent posts sidebar images */
  .rp-post-img {
    width: 80px;
    height: 80px;
    min-width: 80px;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: 8px;
  }

  .rp-post-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Responsive adjustments */
  @media (max-width: 991px) {
    .blog-card .blog-img {
      height: 250px;
    }
  }

  @media (max-width: 767px) {
    .blog-card .blog-img {
      height: 220px;
    }

    .rp-post-img {
      width: 70px;
      height: 70px;
      min-width: 70px;
    }
  }

  /* Footer large text - adjust font size to prevent overflow */
  .footer-large-text {
    font-size: clamp(60px, 12vw, 180px) !important;
    line-height: 1 !important;
    word-break: break-word;
    overflow-wrap: break-word;
    width: 100%;
    overflow: hidden;
    text-align: center !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  .footer-large-text span {
    display: inline-block;
    text-align: center;
  }

  @media (max-width: 1200px) {
    .footer-large-text {
      font-size: clamp(50px, 10vw, 150px) !important;
    }
  }

  @media (max-width: 768px) {
    .footer-large-text {
      font-size: clamp(40px, 8vw, 100px) !important;
    }
  }
</style>

