<style>
  .strategic-advisory-section .fancy-box.style3 .content {
    max-width: none !important;
    flex: 1;
  }

  .strategic-advisory-section .fancy-box.style3 {
    align-items: flex-start;
  }

  .strategic-advisory-section .fancy-box.style3 .icon {
    flex-shrink: 0;
    margin-top: 5px;
  }

  .service-tabs {
    display: flex;
    flex-direction: column;
  }

  .service-tab-item {
    width: 100%;
    position: relative;
    z-index: 1;
    pointer-events: auto;
  }

  .service-tab-button {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 20px;
    background: transparent;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: left;
    font-size: 16px;
    font-weight: 500;
    color: #333;
    position: relative;
    z-index: 10;
    pointer-events: auto;
    user-select: none;
  }

  .service-tab-button:hover {
    border-color: #ff6b35;
    background: rgba(255, 107, 53, 0.05);
  }

  .service-tab-button.active {
    background: #fff;
    border-color: #ff6b35;
    color: #ff6b35;
    font-weight: 600;
  }

  .service-tab-button .arrow-icon {
    flex-shrink: 0;
    margin-left: 12px;
  }

  .service-tab-button .arrow-icon path {
    stroke: #999;
    transition: stroke 0.3s ease;
  }

  .service-tab-button.active .arrow-icon path {
    stroke: #ff6b35;
  }

  .service-tab-button span {
    flex: 1;
  }

  #serviceImage {
    max-height: 400px;
    width: 100%;
    height: auto;
    object-fit: contain;
  }
</style>

<script is:inline>
  (function() {
    function initServiceTabs() {
      const accordion = document.getElementById('ourServiceAccordion');
      const serviceImage = document.getElementById('serviceImage');
      
      if (!accordion || !serviceImage) {
        setTimeout(initServiceTabs, 100);
        return;
      }
      
      // Use event delegation
      accordion.addEventListener('click', function(e) {
        const button = e.target.closest('.service-tab-button');
        if (!button) return;
        
        e.preventDefault();
        e.stopPropagation();
        
        // Remove active class from all buttons
        const allButtons = accordion.querySelectorAll('.service-tab-button');
        allButtons.forEach(btn => {
          btn.classList.remove('active');
          const item = btn.closest('.service-tab-item');
          if (item) {
            item.classList.remove('active');
          }
        });
        
        // Add active class to clicked button
        button.classList.add('active');
        const currentItem = button.closest('.service-tab-item');
        if (currentItem) {
          currentItem.classList.add('active');
        }
        
        // Change image
        const imagePath = button.getAttribute('data-service-image');
        if (imagePath) {
          serviceImage.src = imagePath;
        }
      });
      
      // Set initial image on page load
      const activeButton = accordion.querySelector('.service-tab-button.active');
      if (activeButton) {
        const initialImage = activeButton.getAttribute('data-service-image');
        if (initialImage) {
          serviceImage.src = initialImage;
        }
      }
    }
    
    // Wait for window load to ensure everything is ready
    if (window.addEventListener) {
      window.addEventListener('load', initServiceTabs);
    } else if (window.attachEvent) {
      window.attachEvent('onload', initServiceTabs);
    } else {
      initServiceTabs();
    }
  })();
</script>

