import { load } from 'js-yaml';

function parseFrontmatter(content: string) {
  const frontmatterRegex = /^---\s*\n([\s\S]*?)\n---\s*\n([\s\S]*)$/;
  let match = content.match(frontmatterRegex);
  
  if (!match) {
    const firstDash = content.indexOf('---\n');
    if (firstDash === 0) {
      const secondDash = content.indexOf('\n---\n', firstDash + 4);
      if (secondDash > 0) {
        const yamlContent = content.substring(4, secondDash);
        const bodyContent = content.substring(secondDash + 5);
        try {
          const data = load(yamlContent) as any;
          return { data: data || {}, content: bodyContent.trim() };
        } catch (error) {
          console.error('Error parsing YAML:', error);
          return { data: {}, content: bodyContent.trim() };
        }
      }
    }
    return { data: {}, content: content.trim() };
  }

  const yamlContent = match[1];
  const bodyContent = match[2];

  try {
    const data = load(yamlContent) as any;
    return { data: data || {}, content: bodyContent.trim() };
  } catch (error) {
    console.error('Error parsing YAML:', error);
    return { data: {}, content: bodyContent.trim() };
  }
}

// Load services page content
let servicesContent: any = {};
try {
  const servicesModule = await import('../keystatic/service-pages/services.mdoc?raw');
  const servicesRaw = typeof servicesModule === 'string' ? servicesModule : servicesModule?.default || '';
  if (servicesRaw) {
    const parsed = parseFrontmatter(servicesRaw);
    servicesContent = parsed.data;
  }
} catch (error) {
  console.warn('Could not load services.mdoc, using empty content');
}

const heroContent = servicesContent?.hero || {};
const globalPartners = servicesContent?.globalPartners || {};
const globalPartnersTabs = servicesContent?.globalPartnersTabs || [];
const localPartners = servicesContent?.localPartners || {};
const tabs = servicesContent?.tabs || [];
const cta = servicesContent?.cta || {};
const moveText = servicesContent?.moveText || [];
const serviceSlides = (servicesContent?.serviceSlides || []).sort((a, b) => (a.order || 0) - (b.order || 0));
const serviceCards = servicesContent?.serviceCards || [
  {
    title: 'MARKETING AGENCY',
    items: ['Event series', 'Business Match', 'Media hub / Package - agency for brands']
  },
  {
    title: 'GAMING BUSINESS',
    items: ['M&A games / Co-pub / Invest / Deal broker', 'Set up business gaming in VN', 'Accelerator / Incubator']
  },
  {
    title: 'GO TO MARKET SERVICES',
    items: ['Sale reference: APP MAGIC, PLAYABLE LABS', 'Go to market for specific services', 'Other: Recruitment, Education']
  }
];
