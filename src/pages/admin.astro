---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin - Gamegeek" description="Admin panel for Gamegeek website.">
  <div class="pt-16 min-h-screen bg-gray-50">
    <div class="container-custom py-8">
      <div class="card p-8">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-4">
            Gamegeek Admin
          </h1>
          <p class="text-gray-600">
            Website management dashboard
          </p>
        </div>

        <div class="grid-responsive-4">
          <!-- Posts Management -->
          <div class="admin-card">
            <div class="admin-icon bg-blue-100">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Blog Posts</h3>
            <p class="text-gray-600 text-sm mb-4">Manage your blog content</p>
            <a href="/blog" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors">
              View Posts
            </a>
          </div>

          <!-- Pages Management -->
          <div class="admin-card">
            <div class="admin-icon bg-green-100">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Pages</h3>
            <p class="text-gray-600 text-sm mb-4">Manage static pages</p>
            <a href="/about" class="bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-green-700 transition-colors">
              View Pages
            </a>
          </div>

          <!-- Services Management -->
          <div class="admin-card">
            <div class="admin-icon bg-purple-100">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Services</h3>
            <p class="text-gray-600 text-sm mb-4">Manage your services</p>
            <a href="/services" class="bg-purple-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-purple-700 transition-colors">
              View Services
            </a>
          </div>

          <!-- Portfolio Management -->
          <div class="admin-card">
            <div class="admin-icon bg-orange-100">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Portfolio</h3>
            <p class="text-gray-600 text-sm mb-4">Manage portfolio projects</p>
            <a href="/portfolio" class="bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-orange-700 transition-colors">
              View Portfolio
            </a>
          </div>
        </div>

        <div class="mt-8 text-center">
          <a href="/" class="btn-primary">
            Back to Website
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
