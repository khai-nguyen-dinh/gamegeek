---
import '../styles/renius/bootstrap.min.css';
import '../styles/renius/swiper-bundle.min.css';
import '../styles/renius/scrollcue.min.css';
import '../styles/renius/remixicon.css';
import '../styles/renius/header.css';
import '../styles/renius/style.css';
import '../styles/renius/footer.css';
import '../styles/renius/responsive.css';
import '../styles/renius/dark-theme.css';
import '../styles/renius/custom.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "GameGeek is the central hub connecting Vietnam's game studios, publishers, investors, and media. We empower collaboration, innovation, and sustainable growth across the entire game industry ecosystem.", keywords = "GameGeek, Vietnam game industry, game studios, publishers, investors, game ecosystem, game community Vietnam, game development Vietnam" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
    
    <!-- Link of JS files -->
    <script is:inline src="/renius/bootstrap.bundle.min.js"></script>
    <script is:inline src="/renius/megamenu.js"></script>
    <script is:inline src="/renius/swiper-bundle.min.js"></script>
    <script is:inline src="/renius/fslightbox.js"></script>
    <script is:inline src="/renius/gsap.min.js"></script>
    <script is:inline src="/renius/scrollTrigger.min.js"></script>
    <script is:inline src="/renius/lenis.min.js"></script>
    <script is:inline src="/renius/scrollToPlugin.js"></script>
    <script is:inline src="/renius/SplitText.min.js"></script>
    <script is:inline src="/renius/customEase.js"></script>
    <script is:inline src="/renius/scrollcue.min.js"></script>
    <script is:inline src="/renius/main.js"></script>
  </body>
</html>
