---
// Upcoming Event Section Component
---

<section id="section-hero" class="section-dark no-top no-bottom text-light relative mh-800">
  <!-- Video Background -->
  <div class="video-background">
    <video autoplay loop muted playsinline>
      <source src="/images/2.mp4" type="video/mp4">
    </video>
    <div class="video-overlay"></div>
    <!-- Fallback image if video doesn't load -->
    <div class="video-fallback" style="background-image: url('/images/hero-6.jpg');"></div>
  </div>

  <!-- Gradient Edge Bottom -->
  <div class="gradient-edge-bottom"></div>

  <!-- Dark Overlay -->
  <div class="sw-overlay op-8"></div>

  <!-- Main Content -->
  <div class="abs abs-centered z-2 w-80">
    <div class="container wow scaleIn" data-wow-duration="3s">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="subtitle">The Future of Intelligence</div>
          <h1 class="fs-120 text-uppercase mb-4 lh-1">AI SUMMIT 2026</h1>

          <div class="d-block d-md-flex justify-content-center align-items-center event-details-row">
            <div class="d-flex justify-content-center align-items-center mx-4 mb-3 mb-md-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="event-icon me-3">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <h4 class="mb-0 event-detail-text">October 1-5, 2026</h4>
            </div>

            <div class="d-flex justify-content-center align-items-center mx-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="event-icon me-3">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <h4 class="mb-0 event-detail-text">San Francisco, CA</h4>
            </div>
          </div>

          <div class="spacer-single"></div>

          <div class="btn-group-custom">
            <a class="btn-main btn-solid" href="#section-tickets">
              GET TICKETS
            </a>
            <a class="btn-main btn-outline" href="#section-schedule">
              VIEW SCHEDULE
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Countdown Section -->
  <div class="abs w-100 start-0 bottom-0 z-3">
    <div class="container">
      <div class="sm-hide bottom-bar wow fadeInUp">
        <div class="bottom-bar-content">
          <div class="bottom-bar-left">
            <h2 class="hurry-text">Hurry Up!</h2>
            <h4 class="book-text">Book Your Seat Now</h4>
          </div>
          <div class="bottom-bar-center">
            <div id="defaultCountdown" class="is-countdown">
              <span class="countdown-row countdown-show4">
                <span class="countdown-section">
                  <span class="countdown-amount">28</span>
                  <span class="countdown-period">DAYS</span>
                </span>
                <span class="countdown-section">
                  <span class="countdown-amount">7</span>
                  <span class="countdown-period">HOURS</span>
                </span>
                <span class="countdown-section">
                  <span class="countdown-amount">28</span>
                  <span class="countdown-period">MINUTES</span>
                </span>
                <span class="countdown-section">
                  <span class="countdown-amount">20</span>
                  <span class="countdown-period">SECONDS</span>
                </span>
              </span>
            </div>
          </div>
          <div class="bottom-bar-right">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="address-icon">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <div class="address-content">
              <div class="address-text">121 AI Blvd,</div>
              <div class="address-text">San Francisco BCA 94107</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-dark {
    background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 50%, #2d1b3d 100%);
    color: #fff;
  }

  .no-top {
    padding-top: 0;
  }

  .no-bottom {
    padding-bottom: 0;
  }

  .text-light {
    color: #ffffff;
  }

  .mh-800 {
    min-height: 800px;
  }

  .relative {
    position: relative;
  }

  .video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
  }

  .video-background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-fallback {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 0;
    display: none;
  }

  .video-background:has(video:not([src])) .video-fallback {
    display: block;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(10, 14, 39, 0.8) 0%, rgba(26, 31, 58, 0.7) 50%, rgba(45, 27, 61, 0.8) 100%);
    z-index: 1;
  }

  /* Hexagonal grid pattern overlay */
  .video-overlay::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(100, 150, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(100, 150, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.3;
    z-index: 1;
  }

  .gradient-edge-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
    z-index: 1;
  }

  .sw-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 1;
  }

  .op-8 {
    opacity: 0.8;
  }

  .abs {
    position: absolute;
  }

  .abs-centered {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .z-2 {
    z-index: 2;
  }

  .z-3 {
    z-index: 3;
  }

  .w-80 {
    width: 80%;
    max-width: 1200px;
  }

  .w-100 {
    width: 100%;
  }

  .start-0 {
    left: 0;
  }

  .bottom-0 {
    bottom: 0;
  }

  .fs-120 {
    font-size: 72px;
    font-weight: 700;
    line-height: 1.1;
  }

  .text-uppercase {
    text-transform: uppercase;
  }

  .fs-sm-12vw {
    font-size: 12vw;
  }

  .mb-4 {
    margin-bottom: 1.5rem;
  }

  .lh-1 {
    line-height: 1;
  }

  .subtitle {
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .d-block {
    display: block;
  }

  .d-md-flex {
    display: flex;
  }

  .justify-content-center {
    justify-content: center;
  }

  .align-items-center {
    align-items: center;
  }

  .mx-4 {
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .mx-2 {
    margin-left: 0.5rem;
    margin-right: 0.5rem;
  }

  .mb-0 {
    margin-bottom: 0;
  }

  .me-3 {
    margin-right: 0.75rem;
  }

  .ms-3 {
    margin-left: 0.75rem;
  }

  .spacer-single {
    height: 40px;
  }

  .id-color {
    color: #9d4edd;
  }

  .event-icon {
    color: #9d4edd;
    width: 24px;
    height: 24px;
  }

  .event-detail-text {
    color: #ffffff;
    font-size: 18px;
    font-weight: 500;
  }

  .event-details-row {
    margin: 30px 0;
  }


  .btn-group-custom {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-main {
    display: inline-block;
    padding: 16px 40px;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    border: 2px solid;
  }

  .btn-solid {
    background: #9d4edd;
    color: #fff;
    border-color: #9d4edd;
  }

  .btn-solid:hover {
    background: #7b2cbf;
    border-color: #7b2cbf;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(157, 78, 221, 0.4);
  }

  .btn-outline {
    background: transparent;
    border: 2px solid #fff;
    color: #9d4edd;
  }

  .btn-outline:hover {
    background: #fff;
    color: #1a1f3a;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 255, 255, 0.3);
  }

  .sm-hide {
    display: block;
  }

  .bottom-bar {
    background: linear-gradient(90deg, rgba(10, 14, 39, 0.95) 0%, rgba(26, 31, 58, 0.95) 50%, rgba(45, 27, 61, 0.95) 100%);
    padding: 35px 50px;
    border-radius: 16px;
    margin: 0 20px 30px 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .bottom-bar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
  }

  .bottom-bar-left {
    flex: 0 0 auto;
  }

  .bottom-bar-center {
    flex: 1 1 auto;
    display: flex;
    justify-content: center;
  }

  .bottom-bar-right {
    flex: 0 0 auto;
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .hurry-text {
    font-size: 36px;
    font-weight: 700;
    color: #fff;
    margin: 0;
    line-height: 1.2;
  }

  .book-text {
    font-size: 16px;
    font-weight: 500;
    color: #fff;
    margin: 8px 0 0 0;
    line-height: 1.4;
  }

  .address-icon {
    color: #9d4edd;
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    margin-top: 4px;
  }

  .address-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .address-text {
    color: #fff;
    font-size: 16px;
    font-weight: 500;
    line-height: 1.4;
    margin: 0;
  }

  .overflow-hidden {
    overflow: hidden;
  }

  .g-4 {
    gap: 1.5rem;
  }

  .justify-content-between {
    justify-content: space-between;
  }

  .op-5 {
    opacity: 0.5;
  }

  .h-50 {
    height: 50%;
  }

  .color {
    background: linear-gradient(to bottom, rgba(255, 107, 53, 0.3) 0%, transparent 100%);
  }

  /* Countdown Styles - High specificity to prevent override */
  .bottom-bar .is-countdown {
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    width: 100% !important;
  }

  .bottom-bar .countdown-row {
    display: flex !important;
    gap: 40px !important;
    align-items: center !important;
    justify-content: center !important;
    width: 100% !important;
  }

  .bottom-bar .countdown-section {
    text-align: center !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;
    min-width: 90px !important;
    flex: 1 !important;
    max-width: 120px !important;
  }

  .bottom-bar .countdown-amount {
    display: block !important;
    font-size: 48px !important;
    font-weight: 700 !important;
    color: #ffffff !important;
    line-height: 1.1 !important;
    margin-bottom: 8px !important;
    font-family: 'Urbanist', sans-serif !important;
    letter-spacing: -1px !important;
  }

  .bottom-bar .countdown-period {
    display: block !important;
    font-size: 11px !important;
    color: #ffffff !important;
    text-transform: uppercase !important;
    letter-spacing: 2px !important;
    font-weight: 500 !important;
    opacity: 1 !important;
    margin-top: 4px !important;
  }


  @media (max-width: 1199px) {
    .fs-120 {
      font-size: 56px;
    }

    .w-80 {
      width: 90%;
    }

    .bottom-bar-content {
      gap: 30px;
    }

    .bottom-bar .countdown-row {
      gap: 25px !important;
    }

    .bottom-bar .countdown-amount {
      font-size: 40px !important;
    }

    .bottom-bar .countdown-section {
      min-width: 70px !important;
      max-width: 100px !important;
    }
  }

  @media (max-width: 991px) {
    .bottom-bar-content {
      flex-direction: column;
      gap: 30px;
      text-align: center;
    }

    .bottom-bar-left,
    .bottom-bar-right {
      width: 100%;
      justify-content: center;
    }

    .hurry-text {
      font-size: 32px;
    }
  }

  @media (max-width: 767px) {
    .mh-800 {
      min-height: 600px;
    }

    .fs-120 {
      font-size: 40px;
    }

    .fs-sm-12vw {
      font-size: 12vw;
    }

    .sm-hide {
      display: none;
    }

    .d-md-flex {
      flex-direction: column;
      gap: 20px;
    }

    .mx-4 {
      margin-left: 0;
      margin-right: 0;
    }

    .btn-main {
      display: block;
      margin: 10px auto;
      width: 200px;
    }

    .bottom-bar {
      margin: 0 10px 20px 10px;
      padding: 25px 30px;
    }

    .bottom-bar .countdown-row {
      flex-wrap: wrap !important;
      gap: 15px !important;
    }

    .bottom-bar .countdown-section {
      min-width: 60px !important;
      max-width: 80px !important;
    }

    .bottom-bar .countdown-amount {
      font-size: 32px !important;
    }

    .bottom-bar .countdown-period {
      font-size: 10px !important;
    }
  }
</style>

<script>
  // Video Fallback Handler
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.querySelector('.video-background video');
    const fallback = document.querySelector('.video-fallback');
    
    if (video && fallback) {
      video.addEventListener('error', function() {
        fallback.style.display = 'block';
        video.style.display = 'none';
      });
      
      // Check if video can play
      video.addEventListener('loadeddata', function() {
        fallback.style.display = 'none';
      });
      
      // If video doesn't load after 3 seconds, show fallback
      setTimeout(function() {
        if (video.readyState === 0) {
          fallback.style.display = 'block';
          video.style.display = 'none';
        }
      }, 3000);
    }
  });

  // Countdown Timer
  document.addEventListener('DOMContentLoaded', function() {
    const countdownElement = document.getElementById('defaultCountdown');
    if (!countdownElement) return;

    // Set target date (October 1, 2026)
    const targetDate = new Date('2026-10-01T00:00:00').getTime();

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = targetDate - now;

      if (distance < 0) {
        countdownElement.innerHTML = '<span class="countdown-row"><span class="countdown-section"><span class="countdown-amount">0</span><span class="countdown-period">Event Started</span></span></span>';
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      const countdownHTML = `
        <span class="countdown-row countdown-show4">
          <span class="countdown-section">
            <span class="countdown-amount">${String(days).padStart(2, '0')}</span>
            <span class="countdown-period">DAYS</span>
          </span>
          <span class="countdown-section">
            <span class="countdown-amount">${String(hours).padStart(2, '0')}</span>
            <span class="countdown-period">HOURS</span>
          </span>
          <span class="countdown-section">
            <span class="countdown-amount">${String(minutes).padStart(2, '0')}</span>
            <span class="countdown-period">MINUTES</span>
          </span>
          <span class="countdown-section">
            <span class="countdown-amount">${String(seconds).padStart(2, '0')}</span>
            <span class="countdown-period">SECONDS</span>
          </span>
        </span>
      `;

      countdownElement.innerHTML = countdownHTML;
      
      // Force reflow to ensure styles are applied
      countdownElement.offsetHeight;
    }

    // Update immediately
    updateCountdown();

    // Update every second
    setInterval(updateCountdown, 1000);
  });
</script>

