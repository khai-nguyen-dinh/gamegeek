<style>
  .section-dark {
    background: transparent;
    overflow: hidden;
    position: relative;
  }

  .bg-color {
    background: linear-gradient(135deg, #ff6b35 0%, #f6730d 100%);
  }

  .bg-color-2 {
    background: linear-gradient(135deg, #f6730d 0%, #d90845 100%);
  }

  .text-light {
    color: #ffffff;
  }

  .lh-1 {
    line-height: 1;
  }

  .rot-2 {
    transform: rotate(3.5deg);
    transform-origin: left center;
  }

  .rot-min-1 {
    transform: rotate(-2.5deg);
    transform-origin: left center;
  }

  .mt-min-20 {
    margin-top: -5px;
  }

  .fs-60 {
    font-size: 60px;
    font-weight: 700;
    white-space: nowrap;
  }

  .mx-3 {
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .op-2 {
    opacity: 0.2;
  }

  .py-4 {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .p-0 {
    padding: 0;
  }

  .d-flex {
    display: flex;
    align-items: center;
  }

  .de-marquee-list-1,
  .de-marquee-list-2 {
    width: 100%;
    overflow: hidden;
  }

  .js-marquee-wrapper {
    display: flex;
    width: fit-content;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .marquee-wrapper-1 {
    animation: marqueeAnimation-1 30s linear infinite;
  }

  .marquee-wrapper-2 {
    animation: marqueeAnimation-2 30s linear infinite;
  }

  .js-marquee {
    display: flex;
    align-items: center;
    float: left;
    white-space: nowrap;
  }

  @keyframes marqueeAnimation-1 {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes marqueeAnimation-2 {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  @media (max-width: 1199px) {
    .fs-60 {
      font-size: 40px;
    }
  }

  @media (max-width: 767px) {
    .fs-60 {
      font-size: 28px;
    }

    .mx-3 {
      margin-left: 0.5rem;
      margin-right: 0.5rem;
    }

    .rot-2 {
      transform: rotate(2deg);
    }

    .rot-min-1 {
      transform: rotate(-1.5deg);
    }
  }
</style>

