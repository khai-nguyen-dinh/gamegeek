<style>
  .event-schedule-section {
    background: #fff;
    padding: 100px 0;
  }

  .section-header {
    margin-bottom: 60px;
  }

  .section-badge {
    display: inline-block;
    padding: 8px 24px;
    border: 1px solid #9d4edd;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  .section-badge span {
    color: #9d4edd;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .section-title {
    font-size: 48px;
    font-weight: 700;
    color: #1a1f3a;
    line-height: 1.3;
    margin: 0;
  }

  .year-tabs-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 50px;
  }

  .year-tabs {
    display: flex;
    gap: 0;
    background: #f5f5f5;
    border-radius: 8px;
    padding: 4px;
  }

  .year-tab {
    padding: 12px 40px;
    background: transparent;
    border: none;
    color: #1a1f3a;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .year-tab:hover {
    color: #9d4edd;
  }

  .year-tab.active {
    background: #ff6b35;
    color: #fff;
  }

  .events-content {
    position: relative;
  }

  .year-events {
    display: none;
  }

  .year-events.active {
    display: block;
  }

  .event-card {
    display: flex;
    gap: 40px;
    margin-bottom: 50px;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .event-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .event-image-link {
    display: block;
    text-decoration: none;
    flex: 0 0 400px;
  }

  .event-image {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .event-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 300px;
  }

  .event-date-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: #9d4edd;
    padding: 8px 16px;
    border-radius: 8px;
  }

  .event-date-badge span {
    color: #fff;
    font-size: 14px;
    font-weight: 600;
    text-transform: lowercase;
  }

  .event-details {
    flex: 1;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .event-title-link {
    text-decoration: none;
    display: block;
  }

  .event-title {
    font-size: 28px;
    font-weight: 700;
    color: #1a1f3a;
    line-height: 1.4;
    margin: 0 0 20px 0;
    transition: color 0.3s ease;
  }

  .event-title-link:hover .event-title {
    color: #ff6b35;
  }

  .event-image-link:hover .event-image img {
    transform: scale(1.05);
  }

  .event-image img {
    transition: transform 0.3s ease;
  }

  .event-meta {
    display: flex;
    gap: 30px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #666;
    font-size: 14px;
  }

  .meta-item svg {
    width: 16px;
    height: 16px;
    color: #999;
  }

  .event-description {
    color: #666;
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 25px 0;
  }

  .event-speaker {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 25px;
  }

  .speaker-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .speaker-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .speaker-name {
    font-size: 16px;
    font-weight: 600;
    color: #1a1f3a;
    margin-bottom: 4px;
  }

  .speaker-role {
    font-size: 14px;
    color: #999;
  }

  .btn-buy-ticket {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 32px;
    background: #ff6b35;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    width: fit-content;
  }

  .btn-buy-ticket:hover {
    background: #f6730d;
    transform: translateX(5px);
  }

  .btn-buy-ticket svg {
    width: 16px;
    height: 16px;
  }

  @media (max-width: 991px) {
    .event-card {
      flex-direction: column;
    }

    .event-image {
      flex: 0 0 auto;
      width: 100%;
    }

    .section-title {
      font-size: 36px;
    }
  }

  @media (max-width: 767px) {
    .event-schedule-section {
      padding: 60px 0;
    }

    .section-title {
      font-size: 28px;
    }

    .year-tab {
      padding: 10px 24px;
      font-size: 14px;
    }

    .event-details {
      padding: 30px 20px;
    }

    .event-title {
      font-size: 22px;
    }

    .event-meta {
      flex-direction: column;
      gap: 15px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const yearTabs = document.querySelectorAll('.year-tab');
    const yearEvents = document.querySelectorAll('.year-events');

    yearTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const year = this.getAttribute('data-year');

        // Remove active class from all tabs
        yearTabs.forEach(t => t.classList.remove('active'));
        // Add active class to clicked tab
        this.classList.add('active');

        // Hide all year events
        yearEvents.forEach(events => {
          events.classList.remove('active');
        });

        // Show selected year events
        const selectedEvents = document.querySelector(`.year-events[data-year-content="${year}"]`);
        if (selectedEvents) {
          selectedEvents.classList.add('active');
        }
      });
    });
  });
</script>

