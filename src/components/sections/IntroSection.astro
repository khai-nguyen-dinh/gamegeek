---
// Intro Section Component with Slideshow
---

<section class="intro-section">
  <div class="intro-container-wrapper style1">
    <div class="container">
      <div class="intro-wrapper style1 fix">
        <div class="shape1">
          <img src="/images/introShape1_1.png" alt="shape">
        </div>
        <div class="shape2">
          <img src="/images/introShape1_2.png" alt="shape">
        </div>
        <div class="shape3 d-none d-xxl-block cir36">
          <img src="/images/introShape1_3.png" alt="shape">
        </div>
        <div class="shape4 d-none d-xxl-block cir36">
          <img src="/images/introShape1_4.png" alt="shape">
        </div>
        <div class="shape5 d-none d-xxl-block cir36">
          <img src="/images/introShape1_5.png" alt="shape">
        </div>
        
        <!-- Slideshow Container -->
        <div class="intro-slideshow-container">
          <div class="intro-slideshow-wrapper">
            <!-- Slide 1: Original Content -->
            <div class="intro-slide intro-slide-1 active">
              <div class="container">
                <div class="row">
                  <div class="col-xl-7 order-2 order-xl-1">
                    <div class="intro-content">
                      <div class="intro-section-title">
                        <div class="intro-subtitle">
                          <span>News!</span>Find Your Solution 
