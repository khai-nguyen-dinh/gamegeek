---
import { getContentObject } from '../utils/content';

interface Props {
    variant?: 'white' | 'black';
}

const { variant = 'black' } = Astro.props;
const textColor = variant === 'white' ? 'text-title' : 'text-white';
const navbarContent = getContentObject('navbar');
const menuItems = navbarContent?.menu || [];
const buttonText = navbarContent?.buttonText || 'Get Started';
---


<!-- Navbar Start -->
<div class="navbar-area style-three position-relative sticky" id="navbar" data-variant={variant}>
    <div class="container-fluid">
        <div class="navbar-wrapper d-flex justify-content-between align-items-center">
            <a href="/" class="navbar-brand">
                <img src="/images/logo.png" alt="Logo">
            </a>
            <div class="menu-area" style="flex: 1; display: flex; justify-content: center;">
                <div class="overlay"></div>
                <nav class="menu">
                    <div class="menu-mobile-header">
                        <button type="button" class="menu-mobile-arrow bg-transparent border-0"><i class="ri-arrow-left-s-line"></i></button>
                        <div class="menu-mobile-title"></div>
                        <button type="button" class="menu-mobile-close bg-transparent border-0"><i class="ri-close-line"></i></button>
                    </div>
                    <ul class="menu-section p-0 mb-0 lh-1" style="display: flex; justify-content: center; align-items: center; gap: 30px; list-style: none; flex-wrap: wrap;">
                        {menuItems.map((item) => (
                            <li>
                                <a href={item.href} class={`${textColor} fw-semibold menu-link`} style={`text-decoration: none; font-size: 14px; letter-spacing: 0.5px;`}>{item.text}</a>
                            </li>
                        ))}
                    </ul>
                </nav>
            </div>
            <div class="other-options d-flex flex-wrap align-items-center justify-content-end">
                <div class="option-item d-lg-block d-none">
                    <button type="button" onclick="window.dispatchEvent(new Event('openContactModal'))" class="btn style-two d-inline-flex flex-wrap align-items-center p-0 border-0 bg-transparent"><span class="btn-text d-inline-block fw-semibold position-relative transition">{buttonText}</span><span class="btn-icon position-relative d-flex flex-column align-items-center justify-content-center rounded-circle transition"><i class="ri-arrow-right-up-line"></i></span></button>
                </div>
                <div class="option-item d-lg-none">
                    <button type="button" class="menu-mobile-trigger">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Navbar End -->

<script>
    // Navbar scroll behavior
    document.addEventListener('DOMContentLoaded', function() {
        const navbar = document.getElementById('navbar');
        
        if (!navbar) return;
        
        // Only target desktop menu links (not mobile menu)
        const menuLinks = navbar.querySelectorAll('.menu-section li a.menu-link');
        const variant = navbar.getAttribute('data-variant') || 'black';
        const isMobile = window.innerWidth <= 991;
        
        function handleScroll() {
            // Don't apply scroll styles on mobile
            if (window.innerWidth <= 991) return;
            
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            
            if (scrollTop > 100) {
                // When scrolled, show compact menu
                navbar.classList.add('navbar-compact');
                // Force white text color for all menu links when compact (regardless of variant)
                menuLinks.forEach(link => {
                    link.style.setProperty('color', '#ffffff', 'important');
                });
            } else {
                // When at top, show full header
                navbar.classList.remove('navbar-compact');
                // Restore original color based on variant
                menuLinks.forEach(link => {
                    if (variant === 'white') {
                        link.style.setProperty('color', '#000000', 'important');
                    } else {
                        link.style.setProperty('color', '#ffffff', 'important');
                    }
                });
            }
        }

        // Initial check for scroll position (only on desktop)
        if (!isMobile) {
            handleScroll();
        }
        
        // Add scroll event listener
        window.addEventListener('scroll', handleScroll, { passive: true });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            const nowMobile = window.innerWidth <= 991;
            if (nowMobile !== isMobile) {
                // Reset styles when switching between mobile/desktop
                menuLinks.forEach(link => {
                    link.style.removeProperty('color');
                });
            }
        });
    });
</script>

